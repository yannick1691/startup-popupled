.onzeKlanten-container{
  width: 100%;
  max-width: 100vw
  padding-top: 25px;
  padding-bottom: 25px;
  overflow: hidden;
  .swiper-wrapper{
    width: 250px
    height: 250px
    .swiper-slide{
      object-fit: contain;
      object-fit: center;
      opacity: 0.0
      &.swiper-slide-active{
        opacity: 1
        margin-left: -50px
        z-index: 99
      }
      &.swiper-slide-prev{
        padding-left: 50px
        margin-left: 50px
        opacity: 0.5
        z-index: 1
      }
      &.swiper-slide-next{
        padding-right: 50px
        margin-left: -50px
        margin-right: 50px
        opacity: 0.5
        z-index: 1
      }
    }
  }
  .swiper-button-prev{
    background-image: url(../links/img/prev-slide.svg)
  }
  .swiper-button-next{
    background-image: url(../links/img/next-slide.svg)
  }
}
